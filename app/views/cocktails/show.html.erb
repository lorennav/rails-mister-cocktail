<h1><%= @cocktail.name %></h2>

<ul class="list-group">
  <h4><strong>Doses</strong></h4>
  <% @cocktail.doses.each do |dose| %>
    <li class="list-group-item"><%= dose.description %> <%= dose.ingredient.name %> <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
    <i class="fa fa-trash destroy_dose"></i>
    <% end %> </li>
  <% end %>
</ul>

<div class="col-sm-12 col-md-6">
  <%= render "doses/new", cocktail: @cocktail, dose: @dose %>
</div>

<p><%= link_to "See all cocktails", cocktails_path %></p>
